<%- include('partials/head') -%>
<%- include('partials/loggedinHeader') -%>
<div class="container lg:w-full xl:w-full sm:w-full md:w-full px-5 pt-5 py-5">
   <div class="flex justify-center">
    <%- include('partials/profilePicture') -%>
   </div>

    <div class="flex lg:w-full xl:w-full sm:w-full md:w-full">

      <div class="w-1/2 flex justify-center  sm:w-full">
        
        <form class= ''action="/post/createPost" enctype="multipart/form-data" method="POST">
          <h2 class="text-white flex justify-center">New Event Infrastructure</h2>
          <div class="mb-3">
              <label for="title" class="form-label text-white">Title</label>
              <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="mb-3">
            <label for="caption" class="form-label text-white">Brief Decsription</label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
      </div>
  
  
      <section class=" flex justify-center mx-auto  text-gray-700 w-1/2 space-x-2 mt-5  md:flex-wrap ">
        <div class="container px-5 py-2 mx-auto lg:pt-12 lg:px-32 lg:w-full xl:w-full sm:w-full md:w-full">
          <ul class="flex flex-wrap -m-1 md:-m-2 list-unstyled">
            <% for(var i=0; i<posts.length; i++) {%>
            <li class="flex flex-wrap w-1/3">
              <a href="/post/<%= posts[i]._id%>" class=" p-1 md:p-2">
                <img class="img-fluid block object-cover object-center rounded-lg " src="<%= posts[i].image%>">
              </a>
            </li>
            <% } %>
          
          </ul>
          <div class="row  w-1/3 mx-auto">
            <a class="btn btn-primary" href="/feed">View Feed</a>
          </div> 
        </div> 
        
      </section>
    </div>
</div>

  
        


<%- include('partials/footer') -%>